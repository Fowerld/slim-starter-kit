{
    "name": "cokadev/slim-starter-kit",
    "description": "A Slim framework starter kit",
    "version": "1.0.0",
    "type": "project",
    "authors": [
        {
            "name": "Kavy Coma",
            "email": "cokadev@gmail.com"
        }
    ],
    "require": {
        "slim/slim": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8"
    },
    "scripts": {
        "test:phpcs": "./vendor/bin/phpcs app --standard=PSR2 --colors -n",
        "fix:phpcbf": "./vendor/bin/phpcbf app --standard=PSR2"
    }
}
